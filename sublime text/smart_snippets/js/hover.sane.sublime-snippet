<snippet><description>hover</description><tabTrigger>hover</tabTrigger><scope>source.js</scope><content>
<![CDATA[\$('').hover(
	function(){
		\$(this).css({opacity:'0',display:'block'}).stop().animate({opacity:'1'});
	},
	function(){
		\$(this).stop().animate({opacity:'0'},function(){\$(this).css({display:'none'});}); 
	}
);  ]]>
</content></snippet>